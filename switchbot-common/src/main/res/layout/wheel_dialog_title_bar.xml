<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/wheel_id_title_bar_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:text="@string/dialog_cancel"
        android:textColor="@color/wheel_black"
        android:textSize="@dimen/wheel_title_bar_cancel_size" />

    <TextView
        android:id="@+id/wheel_id_title_bar_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:text="@string/dialog_yes"
        android:textColor="@color/wheel_black"
        android:textSize="@dimen/wheel_title_bar_ok_size" />

    <TextView
        android:id="@+id/wheel_id_title_bar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:paddingLeft="12dp"
        android:paddingTop="20dp"
        android:paddingRight="12dp"
        android:paddingBottom="8dp"
        android:textColor="@color/wheel_title_bar_title_color"
        android:textSize="@dimen/wheel_title_bar_title_size"/>

</FrameLayout>