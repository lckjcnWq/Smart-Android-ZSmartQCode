<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.video.VideoPlayerActivity">
    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:id="@+id/topbar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height"/>
    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/pvPlayer"
        app:layout_constraintTop_toBottomOf="@+id/topbar"
        app:controller_layout_id="@layout/wo_exo_player_control_view"
        android:maxHeight="500dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvDesc"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/pvPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



    <com.qmuiteam.qmui.layout.QMUIButton
        android:visibility="gone"
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:enabled="true"
        app:qmui_radius="8dp"
        android:background="@drawable/primary_button_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_30"
        android:gravity="center"
        android:text="@string/curtain_confirm_full_open"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>