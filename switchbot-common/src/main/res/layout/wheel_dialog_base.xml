<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvNotWorkMenu"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    app:cardCornerRadius="12dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    android:layout_marginBottom="-25dp"
    android:layout_marginLeft="-2dp"
    android:layout_marginRight="-2dp"
    android:layout_alignParentBottom="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_corner_up"
        android:orientation="vertical">

        <include layout="@layout/wheel_dialog_title_bar" />

        <TextView
            android:id="@+id/wheel_id_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_10"
            android:textSize="@dimen/dp_12"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_10"
            android:paddingTop="@dimen/wheel_picker_padding_top"
            android:paddingEnd="@dimen/dp_10"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/wheel_id_picker_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal"
            android:paddingStart="@dimen/wheel_picker_padding_left"
            android:paddingTop="@dimen/dp_4"
            android:paddingEnd="@dimen/wheel_picker_padding_right"
            android:paddingBottom="@dimen/wheel_picker_padding_bottom" />
    </LinearLayout>
</androidx.cardview.widget.CardView>