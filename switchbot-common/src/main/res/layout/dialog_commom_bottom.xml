<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_corner_up">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="@dimen/dp_14"
        android:padding="@dimen/dp_6"
        android:text="@string/sure_to_quash_invate"
        android:textColor="@color/c5"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toTopOf="@+id/divider_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/divider_view"
        android:layout_width="match_parent"
        android:layout_marginTop="11dp"
        android:layout_height="@dimen/dp_1"
        android:background="#f4f4f2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_tv" />


    <TextView
        android:id="@+id/first_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="17dp"
        android:paddingBottom="17dp"
        android:text="@string/dialog_yes"
        android:textColor="@color/c1"
        android:textSize="@dimen/sp_16"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/divider_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <View
        android:id="@+id/divider_view2"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/page_bg_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_tv" />

    <TextView
        android:id="@+id/cancel_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="17dp"
        android:paddingBottom="17dp"
        android:text="@string/dialog_cancel"
        android:textColor="@color/cc4"
        android:textSize="@dimen/sp_16"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/divider_view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>