<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:viewBindingIgnore="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="android.widget.RelativeLayout">

    <ImageView
        android:layout_centerVertical="true"
        android:layout_marginStart="24dp"
        android:id="@+id/viewInputLeftImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        />

    <EditText
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_toEndOf="@+id/viewInputLeftImage"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@null"
        android:id="@+id/viewInputEdittext"/>

    <TextView
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        
        android:layout_alignStart="@+id/viewInputRightImage"
        android:layout_marginEnd="11dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@null"
        android:id="@+id/viewInputRightText"/>

    <ImageView
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/viewInputRightImage"/>

</merge>